.b-slider
  overflow: hidden;
  min-height: 606px;
  border-bottom: 1px solid #000000;
  background: #3c3c3c url(../img/bgslider.png) repeat;
  .carousel-control
    z-index: 20;

  .carousel-caption
    top: 15%;

    .sliderHeader
      text-align left


  img
    max-height: 606px;

  > *
    max-height: 540px;
    overflow: hidden;

  .carousel-caption h1
    margin-bottom: 0px;





@media (max-width: 970px)
  .b-slider .carousel-caption
    padding-bottom: 30px;
    right: 10%;
    left: 10%;
    top:5%;


@media (max-width: 1400px)
  .b-slider .carousel-caption
    h1
      font-size: 250%
    p
      font-size: 150%;


@media (min-width: 1401px)

  .b-slider .carousel-caption
    h1
      font-size: 350%
    p
      font-size: 150%;


@media (max-width: 1100px)
  .b-slider .carousel-caption
    h1
      font-size: 150%
    p
      font-size: 100%;