.b-slider
  overflow: hidden;
  max-height: 606px;
  padding-top: 15px;
  border-bottom: 1px solid #000000;
  background: #3c3c3c url(../img/bgslider.png) repeat;

.b-slider .carousel-control
  z-index: 20;
.b-slider .carousel-caption
  top: 20%;


.b-slider .sliderHeader
  text-align left
.b-slider .carousel-caption h2
  font-weight: bold


.b-slider .building .text-gold
    color: #fbb50d
    margin: 0;
    padding-right: 100px;

.b-slider .carousel-caption h2 small


.b-slider .homeSec .carousel-caption
  left: -30%;
  top: -10%;
  small
    color: #303030
    padding: 10px;

.b-slider .sat .carousel-caption .sat-small
  color: #FFFFFF
.b-slider img
  max-height: 606px;


.b-slider video
  min-width: 100%;
  position: absolute;
  top: -300px;


.b-slider > *
  max-height: 540px;
  overflow: hidden;



@media (max-width: 1400px)
  .b-slider .carousel-caption h1
    font-size: 200%
  .b-slider .carousel-caption h2
    font-size: 200%
  .b-slider .carousel-caption h3
    font-size: 150%

@media (min-width: 1921px)
  .b-slider
    width: 1920px;
    margin: 0 auto