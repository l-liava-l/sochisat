.b-slider
  overflow: hidden;
  max-height: 606px;
  padding-top: 15px;


.b-slider .carousel-caption
  top: 30%;

.b-slider .carousel-caption h2
  font-weight: bold


.b-slider .building h2
  small
    background: #434343;
    padding: 10px;

.b-slider .videoSec .carousel-caption h2
  background: none repeat scroll 0% 0% #F33;
  transform: skewY(-10deg);
  backface-visibility: hidden;
  .btn
    border-radius: 0px;
    border: 0;
    color: #f3f3f3
    background: #434343;
    span
      background: #f4e218;
      color: #323232
      padding: 5px;






.b-slider img
  max-height: 606px;


.b-slider video
  min-width: 100%;
  position: absolute;
  top: -200px;


.b-slider > *
  max-height: 540px;
  overflow: hidden;


@media (min-width: 1400px)
  .b-slider .carousel-caption h2
    font-size: 400%


@media (min-width: 1921px)
  .b-slider
    width: 1920px;
    margin: 0 auto