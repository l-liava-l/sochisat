@media only screen and (min-device-width: 1280px)
  .b-tittle h1
    font-size 700%

  .b-tittle .loader-span
    font-size 700%

@media only screen and (max-device-width: 1080px)
  .b-tittle__loader-span
    font-size 600%

  .portret-hidden
    display none

  .b-tittle__list
    margin-left 30px


.b-tittle
  margin-top: 100px;
  box-shadow:         0px 0px 5px 0px rgba(50, 50, 50, 0.75);
  padding: 50px;

.b-tittle__list__item
  color: #333
  font-weight: bold
  text-decoration: none
  float: left
  cursor: pointer
  margin-top: 40px

.b-tittle__list__item:hover
  text-decoration: none

.b-tittle__description
  color #666666
  font-size 20px

.b-tittle__list__item__github
  max-width 50px
  max-height 50px
  border-radius 10px

.b-tittle__list__item__brainstorage
  max-height 50px
  border-radius 10px

.b-tittle .loader-span
  color: #fe4300